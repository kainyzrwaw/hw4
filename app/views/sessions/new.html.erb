<h1 class="py-4">Login</h1>

<%= form_with :url => "/sessions" do |form| %>

 <p>
 <div class="row">
 <div class="col-md-3">
    <%= form.label "email" %>
    <%= form.text_field "email" %>
  </div>
  </div>
  <div class="row py-4">
  <div class="col-md-3">
    <%= form.label "password" %>
    <%= form.password_field "password" %>
  </div>
  </div>
  </p>
  
  <p>
    <%= form.submit "Login",  class: "btn btn-primary"%>
  </p>
<% end %>
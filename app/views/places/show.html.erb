<h1 class="py-4 display-6"><%= @place["name"] %></h1>

<% if @current_user %>

<div class="row">
<div class="col-sm-9">
<h2 class="pb-3">My Posts</h2>
</div>
<div class="col-sm-3">
<p>
  <a class="btn btn-success" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>
</div>

<div class="row">
<% for post in @posts %>
  <div class="col-md-4">
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
  </div>
<% end %>
</div>

<p>
  <a class="btn btn-primary" href="/places">Back to All Places</a>
</p>

<% end %>
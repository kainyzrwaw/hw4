<div class="row">
<div class="col-sm-3">
<h1>Places</h1>
</div>

<% if @current_user %>
<div class="col-sm-9">
<p>
  <a class="btn btn-success" href="/places/new">New place</a>
</p>
</div>
</div>

<% end %>

<ul>
  <% for place in @places %>
    <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
  <% end %>
</ul>